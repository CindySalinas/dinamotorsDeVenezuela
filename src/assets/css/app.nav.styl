nav
  background-color $bg-color
  padding 20px 25px
  span.toggle-menu
    color #fff
    display none
    &:hover
      cursor pointer
  ul.navbar
    list-style none
    margin 0
    text-align center
    li
      display inline-block
      margin  0 30px
      vertical-align center
      a
        color #fff
        text-decoration none
      @media (max-width: 700px)
        margin 0 20px

@media (max-width: 600px)
  nav
    padding 0
    span.toggle-menu
      display block
      padding 15px
    ul.navbar
      display none
      background-color #025a89
      padding 0
      text-align left
      li
        display block
        margin 0
        padding  15px
        &:hover
          background-color #049ff2
