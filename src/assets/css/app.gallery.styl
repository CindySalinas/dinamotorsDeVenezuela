#container-2
  position relative
  .buttons
    position absolute
    z-index 10
    font-size 0px
    top 160px
    width 100%
    .controls
      display inline-block
      background transparent
      border none
      font-size 50px
      cursor pointer
      color #fff
    #next
      float right
  #slides
    position relative
    height 400px
    padding 0px
    margin 0px
    list-style-type: none
    ul, li, img
      width 100%
      height 100%
  .slide
    position absolute
    left 0px
    top 0px
    width 100%
    height 100%
    opacity 0
    z-index 1
    transition opacity 1s
  .showing
    opacity 1
    z-index 2