header
  padding 20px 0
  text-align center
  .logo
    display inline-block
    margin 0 25% 0 0
    padding 0
    vertical-align middle
    img
      width 250px
  .networks
    display inline-block
    font-size 2em
    margin-left 25%
    text-align right
    vertical-align middle
    .social-icons
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin 0 0 0 35px
        a
          color $bg-color
          i
            transition all ease 0.3s
          &:hover i
            transform scale(1.5)

@media (max-width: 1000px)
  header
    .logo
      margin-right 15%
    .networks
      margin-left 15%

@media (max-width: 700px)
  header
    .logo
      margin-right 10%
    .networks
      margin-left 10%
      .social-icons
        li
          margin-left 25px !important

@media (max-width: 550px)
  header
    .logo
      margin-right 5%
      img
        width 170px
    .networks
      font-size 1.5em
      margin-left 5%

@media (max-width: 380px)
  header
    padding 10px
    .networks
      margin-left 5%
    .logo, .networks
      margin 10px 0 0 0
    .logo
      margin-right 5%
      img
        width 150px
