header
  padding 20px 0
  text-align center
  .logo
    display inline-block
    margin 0 25% 0 0
    padding 0
    vertical-align middle
    img
      width 250px
  .networks
    display inline-block
    font-size 2em
    margin-left 25%
    text-align right
    vertical-align middle
    .social-icons
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin 0 0 0 15px
        a
          color $bg-color

@media (max-width: 1000px)
  header
    .logo
      margin-right 15%
    .networks
      margin-left 15%

@media (max-width: 700px)
  header
    .logo
      margin-right 10%
    .networks
      margin-left 10%

@media (max-width: 550px)
  header
    .logo
      margin-right 5%
      img
        width 200px
    .networks
      font-size 1.5em
      margin-left 5%

@media (max-width: 380px)
  header
    padding 0
    .logo, .networks
      display block
      text-align center
      margin 15px 0 0 0
